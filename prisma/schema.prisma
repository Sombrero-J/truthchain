generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:jaydenchan@localhost:5432/contentdata?schema=public"
}

model Content {
  id          Int      @id @default(autoincrement())
  createdAt DateTime    @default(now())
  title       String   @db.VarChar(255)
  contentText String
  approved    Boolean  @default(false)   
  stake       Int      
  author_id   Int      
  images      Image[]  
  references  References[]
  author    Author   @relation(fields: [author_id], references: [id])
}

model Image {
  id          Int      @id @default(autoincrement())
  imageData   Bytes    
  content_id  Int
  text_details String 
  content     Content  @relation(fields: [content_id], references: [id])
}

model References {
  id         Int    @id @default(autoincrement())
  link       String
  content_id Int
  content    Content @relation(fields: [content_id], references: [id])
}

model Author {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  contents    Content[]
}